<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.komsoft.skeletonkey</id>
    <filename>SkeletonKey</filename>
    <name>SkeletonKey</name>
    <author>KomSoft Oprogramowanie</author>
    <copyright>2013-2014 (c) KomSoft Oprogramowanie</copyright>
    <authorId>gYAAgJWWmDfer27CLcxm_P3mzK0</authorId>
    <versionNumber>%VER_NUMBER%</versionNumber>
    <versionLabel>%VER_LABEL%</versionLabel>
    <platformVersion>%REQ_PLATF_VER%</platformVersion>
    <buildId>%BUILD_ID%</buildId>
    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
	<aspectRatio>portrait</aspectRatio>
	<autoOrients>false</autoOrients>
    </initialWindow>
    <publisher>KomSoft</publisher>
    <action system="true">run_native</action>
    <action>access_shared</action>
    <action>play_audio</action>
    <action>set_audio_volume</action>
    <action>use_gamepad</action>
    <action>read_device_identifying_information</action>
    <category>core.games</category>
    <!--  The icon for the application, which should be 86x86/114x114. -->
    <icon>
      <image>icon_86_p.png</image>
      <image>icon_90_p.png</image>
      <image>icon_114_p.png</image>
    </icon>
    <!--  The splash screen that will appear when your application is launching. Should be 1024x600. -->
    <splashscreens>
      <image>splash_playbook.jpg</image>
      <image>splash_bb10.jpg</image>
    </splashscreens>
    <asset path="SkeletonKey" entry="true">SkeletonKey</asset>
    <asset path="icon_86_p.png">icon_86_p.png</asset>
    <asset path="icon_90_p.png">icon_90_p.png</asset>
    <asset path="icon_114_p.png">icon_114_p.png</asset>
    <asset path="splash_playbook.jpg">splash_playbook.jpg</asset>
    <asset path="splash_bb10.jpg">splash_bb10.jpg</asset>
    <!-- Ensure that shared libraries in the package are found at run-time. -->
    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>
    <asset path="lib/libTouchControlOverlay.so.1" type="Qnx/Elf">lib/libTouchControlOverlay.so.1</asset>
    <asset path="lib/libSDL-1.2.so.12" type="Qnx/Elf">lib/libSDL-1.2.so.12</asset>
    <asset path="lib/libGLES_bc.so.1" type="Qnx/Elf">lib/libGLES_bc.so.1</asset>
    <!-- SkeletonKey data resources. -->
    <asset path="./data">data</asset>
</qnx>
